<%- include("../partials/header.ejs") %>
<div class="container" style="margin:100px">

<h1 style="text-align: center">
	Edit <%= products.name %>
</h1>
  <div style="width: 30%; margin: 25px auto;">
<form action="/index/<%= products._id%>?_method=PUT" method="POST">
	 <div class="form-group">
	<input class="form-control" type="text" name="products[name]" value="<%= products.name %>">
	</div>
	<div class="form-group">
	<input class="form-control" type="number" name="products[price]" value="<%= products.price%>" min="0.01" step="0.01">
	</div>
	 <div class="form-group">
	<input class="form-control" type="text" name="products[image]" value="<%= products.image %>">
	</div>
	<div class="form-group">
	<input class="form-control" style="height:100px" type="text" name="products[description]" value="<%= products.description %>">
	</div>
	<button  class="btn btn-lg btn-primary btn-block">
		Submit
	</button>
</form> 
	</div>
<a href="/index" class="btn btn-sm btn-danger">Back</a>
</div>
<%- include("../partials/footer.ejs") %>
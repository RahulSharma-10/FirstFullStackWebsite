<%- include("../partials/header.ejs") %>
<div class="container" style="margin-top:100px">
	<div class="row">
		<div class="col-md-3">
			<h1>
				MoodBoard
			</h1>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-fluid img-responsive" src="<%= products.image%>">	
				<div class="caption">
					<h4 class="float-right">
						<strong>Rs.<%= products.price %></strong>
					</h4>
					<h5>
						<em>Submitted By <%= products.author.username %></em>
					</h5>
					<h4>
					<a href="#"><%= products.name %></a>	
					</h4>
					<% if(currentUser && products.author.id.equals(currentUser._id)){ %>
					
					<span>
					<a class="btn btn-warning btn-xs" href="/index/<%= products._id%>/edit">Edit</a>
					<form method="POST" class="delete-form" action="/index/<%= products._id%>?_method=DELETE">
						<button class="btn btn-danger btn-xs">
							Delete
						</button>
					</form>
					</span>
					<% } %>
					<p>
						 content content content content content  content content content content content content content content content content content content content content content content content content content content content content content content content content content content content content content content content content content content content content content content content content content content content
					</p>
				</div>

			</div>
			<div class="card card-body bg-light">
				<div class="text-right">
					<a href="/index/<%= products._id%>/comments/new" class="btn btn-success">Add new comment</a>
				</div>
				<hr>
				<% products.comments.forEach(function(comment){ %>
				<div class="row">
					<div class="col-md-12">
					<strong><%= comment.author.username %></strong>
						<span class="float-right">
							10 days ago
							</span>
						<p>
					 <%= comment.text %>
				
						</p>
				<% if(currentUser && products.author.id.equals(currentUser._id)){ %>
				<a class="btn btn-xs btn-warning" href="/index/<%=products._id%>/comments/<%=comment._id%>/edit">
						Edit
				</a>
						<form action="/index/<%=products._id%>/comments/<%=comment._id%>?_method=DELETE" 			                         method="POST" class="delete-form">
						<input type="submit" class="btn btn-xs btn-danger" value="delete">	
						</form>
				<% } %>
				<%	 }) %>		
				</div>
				</div>

			</div>
		</div>
	</div>
</div>
<%- include("../partials/footer.ejs") %>
	
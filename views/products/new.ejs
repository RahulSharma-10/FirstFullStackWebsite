<%- include("../partials/header.ejs") %>
<div class="container" style="margin:100px">

<h1 style="text-align: center">
	Suggestion for a New Product
</h1>
  <div style="width: 30%; margin: 25px auto;">
<form action="/index" method="POST">
	 <div class="form-group">
	<input class="form-control" type="text" name="name" placeholder="Name">
	</div>
	<div class="form-group">
	<input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01">
	</div>
	 <div class="form-group">
	<input class="form-control" type="text" name="image" placeholder="Image Url">
	</div>
	<div class="form-group">
	<input class="form-control" style="height:100px" type="text" name="description" placeholder="Description">
	</div>
	<button  class="btn btn-lg btn-primary btn-block">
		Submit
	</button>
</form> 
	</div>
<a href="/index" class="btn btn-sm btn-danger">Back</a>
</div>
